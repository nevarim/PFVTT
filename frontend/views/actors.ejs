<!DOCTYPE html>
<html>
<head>
  <title>PFVTT Actors</title>
  <link rel="stylesheet" href="/style.css">
  <style>
    .actors-container {
      display: flex;
      height: 100vh;
      background: #2c2c2c;
      color: #fff;
    }
    .actors-sidebar {
      width: 300px;
      background: #1a1a1a;
      border-right: 1px solid #444;
      padding: 20px;
      overflow-y: auto;
    }
    .actors-main {
      flex: 1;
      padding: 20px;
      overflow-y: auto;
    }
    .actor-list {
      list-style: none;
      padding: 0;
      margin: 0;
    }
    .actor-item {
      background: #333;
      margin: 10px 0;
      padding: 15px;
      border-radius: 5px;
      cursor: pointer;
      border: 2px solid transparent;
      transition: all 0.3s;
    }
    .actor-item:hover {
      background: #444;
      border-color: #666;
    }
    .actor-item.selected {
      border-color: #007bff;
      background: #2a4a6b;
    }
    .actor-name {
      font-weight: bold;
      font-size: 16px;
      margin-bottom: 5px;
    }
    .actor-type {
      color: #aaa;
      font-size: 12px;
      text-transform: uppercase;
    }
    .create-actor-btn {
      width: 100%;
      padding: 15px;
      background: #28a745;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 16px;
      margin-bottom: 20px;
    }
    .create-actor-btn:hover {
      background: #218838;
    }
    .actor-sheet {
      background: #2c2c2c;
      border: 1px solid #444;
      border-radius: 10px;
      padding: 20px;
      max-width: 800px;
    }
    .actor-header {
      display: flex;
      align-items: center;
      margin-bottom: 20px;
      padding-bottom: 15px;
      border-bottom: 2px solid #444;
    }
    .actor-avatar {
      width: 80px;
      height: 80px;
      border-radius: 50%;
      background: #444;
      margin-right: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 24px;
    }
    .actor-info h2 {
      margin: 0;
      color: #fff;
    }
    .actor-info .actor-class {
      color: #aaa;
      margin: 5px 0;
    }
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      gap: 15px;
      margin: 20px 0;
    }
    .stat-block {
      background: #1a1a1a;
      padding: 15px;
      border-radius: 5px;
      text-align: center;
    }
    .stat-label {
      color: #aaa;
      font-size: 12px;
      text-transform: uppercase;
      margin-bottom: 5px;
    }
    .stat-value {
      font-size: 24px;
      font-weight: bold;
      color: #fff;
    }
    .modal {
      display: none;
      position: fixed;
      z-index: 1000;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0,0,0,0.8);
    }
    .modal-content {
      background-color: #2c2c2c;
      margin: 5% auto;
      padding: 20px;
      border: 1px solid #444;
      border-radius: 10px;
      width: 80%;
      max-width: 500px;
      color: #fff;
    }
    .close {
      color: #aaa;
      float: right;
      font-size: 28px;
      font-weight: bold;
      cursor: pointer;
    }
    .close:hover {
      color: #fff;
    }
    .form-group {
      margin: 15px 0;
    }
    .form-group label {
      display: block;
      margin-bottom: 5px;
      color: #aaa;
    }
    .form-group input, .form-group select {
      width: 100%;
      padding: 10px;
      background: #1a1a1a;
      border: 1px solid #444;
      border-radius: 5px;
      color: #fff;
    }
    .btn {
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      margin: 5px;
    }
    .btn-primary {
      background: #007bff;
      color: white;
    }
    .btn-primary:hover {
      background: #0056b3;
    }
    .btn-danger {
      background: #dc3545;
      color: white;
    }
    .btn-danger:hover {
      background: #c82333;
    }
    .campaign-header {
      background: #1a1a1a;
      padding: 15px;
      margin-bottom: 20px;
      border-radius: 5px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .back-btn {
      background: #6c757d;
      color: white;
      padding: 10px 15px;
      text-decoration: none;
      border-radius: 5px;
    }
    .back-btn:hover {
      background: #545b62;
      color: white;
      text-decoration: none;
    }
  </style>
</head>
<body>
  <div class="campaign-header">
    <h1 id="campaign-title">Campaign Actors</h1>
    <a href="/campaigns" class="back-btn">‚Üê Back to Campaigns</a>
  </div>
  
  <div class="actors-container">
    <div class="actors-sidebar">
      <button class="create-actor-btn" onclick="openCreateActorModal()">+ Create New Actor</button>
      <ul id="actor-list" class="actor-list">
        <!-- Actors will be loaded here -->
      </ul>
    </div>
    
    <div class="actors-main">
      <div id="actor-sheet-container">
        <div class="actor-sheet" style="text-align: center; color: #aaa; padding: 100px;">
          <h3>Select an actor to view details</h3>
          <p>Choose an actor from the sidebar or create a new one</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Create Actor Modal -->
  <div id="create-actor-modal" class="modal">
    <div class="modal-content">
      <span class="close" onclick="closeCreateActorModal()">&times;</span>
      <h2>Create New Actor</h2>
      <form id="create-actor-form">
        <div class="form-group">
          <label for="actor-name">Name:</label>
          <input type="text" id="actor-name" required>
        </div>
        <div class="form-group">
          <label for="actor-type">Type:</label>
          <select id="actor-type" required>
            <option value="">Select Type</option>
            <option value="character">Character</option>
            <option value="npc">NPC</option>
            <option value="monster">Monster</option>
            <option value="vehicle">Vehicle</option>
          </select>
        </div>
        <div class="form-group">
          <label for="actor-class">Class/Role:</label>
          <input type="text" id="actor-class" placeholder="e.g., Fighter, Wizard, Guard">
        </div>
        <div class="form-group">
          <label for="actor-level">Level:</label>
          <input type="number" id="actor-level" min="1" value="1">
        </div>
        <div class="form-group">
          <label for="actor-hp">Hit Points:</label>
          <input type="number" id="actor-hp" min="1" value="10">
        </div>
        <div class="form-group">
          <label for="actor-ac">Armor Class:</label>
          <input type="number" id="actor-ac" min="1" value="10">
        </div>
        <button type="submit" class="btn btn-primary">Create Actor</button>
        <button type="button" class="btn btn-danger" onclick="closeCreateActorModal()">Cancel</button>
      </form>
    </div>
  </div>

  <script type="module" src="/public/actors.js?v=1"></script>
</body>
</html>