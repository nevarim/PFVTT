    function selectTool(tool) {
      // Handle zoom tools
      if (tool === 'zoom-in' || tool === 'zoom-out' || tool === 'zoom-fit') {
        handleZoomTool(tool);
        return;
      }
      
      // Remove active class from all tools
      document.querySelectorAll('.tool-btn').forEach(btn => {
        btn.classList.remove('active');
