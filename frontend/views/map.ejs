    function hexToRgb(hex) {
      try {
        // Validate input
        if (!hex || typeof hex !== 'string') {
          Logger.warn('Invalid hex color input:', hex);
          return null;
        }
        
        const result = /^#?([a-f\d]{2})([a-f\d]{2})([a-f\d]{2})$/i.exec(hex);
        
        if (!result) {
          Logger.warn('Invalid hex color format:', hex);
          return null;
        }
        
