          if (e.target.tagName === 'INPUT' || e.target.tagName === 'TEXTAREA' || e.target.isContentEditable) {
            return;
          }
          
          // Validate event object
          if (!e || !e.key) {
            Logger.warn('Invalid keyboard event object');
            return;
